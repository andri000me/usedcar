{#=====Get variable : Config Select Block on header=====#}
{% set hidden_headercenter = soconfig.get_settings('toppanel_type') =='2'? 'hidden-compact' : '' %}
{% set hidden_headerbottom = soconfig.get_settings('toppanel_type') =='1'? 'hidden-compact' : '' %}

<header id="header" class=" variant typeheader-{{ typeheader ? typeheader : '1'}}">
	{#======	HEADER TOP	=======#}  
	<div class="header-top hidden-compact hidden">
		<div class="container">
			<div class="row">
				<div class="header-top-left col-lg-7 col-md-8 col-sm-6 col-xs-0">
					
					{% if soconfig.get_settings('phone_status') and soconfig.get_settings('contact_number') %}
							<div class="telephone hidden-xs" >
								{{ soconfig.decode_entities( soconfig.get_settings('contact_number') ) }}
							</div>
						{% endif %}
				</div>
				<div class="header-top-right collapsed-block col-lg-5 col-md-4 col-sm-6 col-xs-12">	
					{% if soconfig.get_settings('lang_status') %}
					<ul class="top-link list-inline lang-curr">
						{% if currency %}<li class="currency"> {{ currency }}  </li> {% endif %}
						{% if language %} <li class="language">{{ language }} </li>	{% endif %}			
					</ul>				
					{% endif %}		
					<ul>	
						<li class="compare hidden-xs"><a href="{{ compare }}"  id="compare-total" title="{{ text_compare }}"><i class="fa fa-exchange"></i>{{ text_compare }}</a></li>
						<li class="wishlist hidden-xs"><a href="{{ wishlist }}" id="wishlist-total" class="top-link-wishlist" title="{{ text_wishlist }} "><i class="fa fa-heart"></i>{{ text_wishlist }}</a></li>
						{% if soconfig.get_settings('checkout_status') %}
							<li class="checkout hidden-xs"><a href="{{ checkout }}" title="{{ text_checkout }} "><span ><i class="fa fa-check-square-o"></i>{{ text_checkout }} </span></a></li>
						{% endif %} 
					</ul>
				</div>
			</div>
		</div>
	</div>
	
	{#======	HEADER CENTER	=======#} 
	<div class="header-middle {{hidden_headercenter}}">
		<div class="container">
			<div class="row">			
				<div class="navbar-logo col-lg-2 col-md-4 col-sm-3 col-xs-12">
					<div class="logo">
				   		{{soconfig.get_logo()}}
				   	</div>
				</div>
				<div class="middle2 col-lg-6 col-md-4 col-sm-4 col-xs-12">
					<div class="search-header-w">
						<div class="icon-search hidden-lg hidden-md hidden-sm"><i class="fa fa-search"></i></div>								
						{{ search_block }}					
					</div>							
				</div>
				<div class="middle3 col-lg-4 col-md-4 col-sm-5 col-xs-12">
					<ul class="top-link list-inline">
						{% if soconfig.get_settings('welcome_message_status') %}
							<li class="hidden-md hidden-sm hidden-xs welcome-msg">
								{% if soconfig.get_settings('welcome_message') is not empty %}
									{{ soconfig.decode_entities( soconfig.get_settings('welcome_message') ) }}
								{% endif %} 
							</li>
						{% endif %}
						<li class="account" id="my_account"><a href="{{ account }}"  class="btn-xs dropdown-toggle" title="{{ text_account }} " data-toggle="dropdown"><span>{{ text_account }} </span> <span class="fa fa-angle-down"></span></a>
							<ul class="dropdown-menu ">
									<li><a href="{{ wishlist }}" title="{{ text_wishlist }}">{{ text_wishlist }}</a></li>
									<li><a href="{{ compare }}" title="{{ text_compare }}">{{ text_compare }}</a></li>
								{% if logged %}
						            <li><a href="{{ account }}">{{ text_account }}</a></li>
						            <li><a href="{{ order }}">{{ text_order }}</a></li>
						            <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
						            <li><a href="{{ download }}">{{ text_download }}</a></li>
						            <li><a href="{{ logout }}"><i class="fa fa-sign-out" aria-hidden="true"></i> {{ text_logout }}</a></li>
					            {% else %}

						            <li><a href="{{ register }}">{{ text_register }}</a></li>
						            <li><a href="{{ login }}">{{ text_login }}</a></li>
					            {% endif %}															
							</ul>
						</li>	
						{% if logged %} 
							<li class="log logout hidden-md hidden-sm hidden-xs"> <a class="link-lg" href="{{ logout }} "><span>{{ text_logout }}</span></a></li>
						{% else %}   
							<li class="log login hidden-md hidden-sm hidden-xs"> <a class="link-lg" href="{{ login }} "><span>{{ text_login }}</span></a></li>								
						{% endif %}
						<li class="shopping_cart">							
						 	{{ cart }}
						</li>
					</ul>
					
				</div>
				
			</div>
		</div>
	</div>

	<div class="header-bottom {{hidden_headerbottom}} hidden">
		<div class="container">			
			{{ content_menu1 }}								
		</div>
	</div>
		
</header>