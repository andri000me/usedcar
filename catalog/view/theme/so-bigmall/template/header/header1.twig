{#=====Get variable : Config Select Block on header=====#}
{% set hidden_headercenter = soconfig.get_settings('toppanel_type') =='2'? 'hidden-compact' : '' %}
{% set hidden_headerbottom = soconfig.get_settings('toppanel_type') =='1'? 'hidden-compact' : '' %}

<header id="header" class=" variant typeheader-{{ typeheader ? typeheader : '1'}}">
	{#======	HEADER TOP	=======#}  
	<div class="header-top hidden-compact">
		<div class="container">
			<div class="row">
				<div class="header-top-left col-lg-4 col-md-4 col-sm-4 col-xs-7">
					{% if soconfig.get_settings('lang_status') %}
					<ul class="top-link list-inline lang-curr">
						{% if currency %}<li class="currency"> {{ currency }}  </li> {% endif %}
						{% if language %} <li class="language">{{ language }} </li>	{% endif %}			
					</ul>				
					{% endif %} 
					
				</div>
				<div class="header-top-right collapsed-block col-lg-8 col-md-8 col-sm-8 col-xs-5">	
					<ul class="top-link list-inline">
						<li class="account" id="my_account"><a href="{{ account }}"  class="btn-xs dropdown-toggle" title="{{ text_account }} " data-toggle="dropdown"><i class="fa fa-user"></i><span>{{ text_account }} </span> <span class="fa fa-angle-down"></span></a>
							<ul class="dropdown-menu ">
									<li class="hidden"><a href="{{ wishlist }}" title="{{ text_wishlist }}">{{ text_wishlist }}</a></li>
									<li class="hidden"><a href="{{ compare }}" title="{{ text_compare }}">{{ text_compare }}</a></li>
								{% if logged %}
						            <li><a href="{{ account }}">{{ text_account }}</a></li>
						            <li class="hidden"><a href="{{ order }}">{{ text_order }}</a></li>
						            <li class="hidden"><a href="{{ transaction }}">{{ text_transaction }}</a></li>
						            <li class="hidden"><a href="{{ download }}">{{ text_download }}</a></li>
						            <li><a href="{{ logout }}"><i class="fa fa-sign-out" aria-hidden="true"></i> {{ text_logout }}</a></li>
					            {% else %}

						            <li><a href="{{ register }}">{{ text_register }}</a></li>
						            <li><a href="{{ login }}">{{ text_login }}</a></li>
					            {% endif %}															
							</ul>
						</li>	
						<li class="compare hidden-sm hidden-xs hidden"><a href="{{ compare }}"  id="compare-total" title="{{ text_compare }}"><i class="fa fa-exchange"></i>{{ text_compare }}</a></li>
						<li class="wishlist hidden-sm hidden-xs hidden"><a href="{{ wishlist }}" id="wishlist-total" class="top-link-wishlist" title="{{ text_wishlist }} "><i class="fa fa-heart"></i>{{ text_wishlist }}</a></li>
						{% if soconfig.get_settings('checkout_status') %}
							<li class="checkout hidden-xs"><a href="{{ checkout }}" title="{{ text_checkout }} "><span ><i class="fa fa-check-square-o"></i>{{ text_checkout }} </span></a></li>
						{% endif %} 
						<li class="shopping_cart hidden eag">							
						 	{{ cart }}
						</li>
					</ul>				
					
				
				</div>
			</div>
		</div>
	</div>
	
	{#======	modal information fo common EAG	=======#} 
	<div class="modal fade" id="modalInformation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog modal-sm" role="document">
		<div class="modal-content">
		  <div class="modal-header">
			<h5 class="modal-title" id="exampleModalLabel" style="text-align:center"></h5> 
		  </div>
		  <div class="modal-body">
			<div id="divdetailcontact"></div>
		  </div>
		  <div class="modal-footer" style="text-align:center">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button> 
		  </div>
		</div>
	  </div>
	</div>
	{#======	HEADER CENTER	=======#} 
	<div class="header-middle {{hidden_headercenter}}">
		<div class="container">
			<div class="row">			
				<div class="navbar-logo col-lg-3 col-md-3 col-sm-4 col-xs-12">
					<div class="logo">
				   		{{soconfig.get_logo()}}
				   	</div>
				</div>
				<div class="col-lg-5 col-md-6 col-sm-6 search-w">	
					<div class="search-header-w">
						<div class="icon-search hidden-lg hidden-md hidden-sm"><i class="fa fa-search"></i></div>								
						{{ search_block }}
					</div>	
							
				</div>
				<div class="col-lg-4 col-md-3 hidden-sm hidden-xs">
					<div class="middle-right">
						{% if soconfig.get_settings('welcome_message_status') %}
							<div class="hidden-sm hidden-xs welcome-msg">
								{% if soconfig.get_settings('welcome_message') is not empty %}
									{{ soconfig.decode_entities( soconfig.get_settings('welcome_message') ) }}
								{% endif %} 
							</div>
						{% endif %}	
						{% if soconfig.get_settings('phone_status') and soconfig.get_settings('contact_number') %}
						<div class="telephone hidden-xs hidden-sm hidden-md" >
							{{ soconfig.decode_entities( soconfig.get_settings('contact_number') ) }}
						</div>
						{% endif %}	
					</div>
				</div>	
				
			</div>
		</div>
	</div>

	<div class="header-bottom {{hidden_headerbottom}}">
		<div class="container">
			<div class="header-bottom-inner">
														
				{{ content_menu1 }}														
						
			</div>
		</div>
	</div>
		
</header>